<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionName="shared">

    <ImageButton
        android:id="@+id/nav_Button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@null"
        android:src="@drawable/selector_nav"
        android:visibility="gone" />

    <com.xfinity.xfinityapp.customviews.TitleTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_toRightOf="@+id/nav_Button"
        android:ellipsize="end"
        android:textColor="@color/app_font_color"
        android:textSize="@dimen/font_title" />

    <com.xfinity.xfinityapp.customviews.TitleTextView
        android:id="@+id/secondaryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_toRightOf="@+id/title"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/secondary_title"
        android:textColor="@color/app_font_color"
        android:textSize="@dimen/font_title"
        android:visibility="gone" />
</RelativeLayout>